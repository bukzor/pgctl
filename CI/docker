#!/bin/bash
set -eu
TOP=$(dirname $(dirname $(readlink -f $0)))
TAG=localhost/ci-pgctl:$USER
LOWCPU='--cpu-shares=2 --cpuset-cpus=0'

if tty -s; then
    OPTS='-ti'
else
    OPTS='-i'
fi

set -x
cd $TOP
docker build -t $TAG CI
exec docker run \
    -u "$(id -u):$(id -g)" \
    "$OPTS" \
    -e TOP=$PWD \
    -v $PWD:/code \
    $TAG \
    "$@"
